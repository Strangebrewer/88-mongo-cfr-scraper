  {{#each articles}}
    <li class="article-li">
      <div class="article-header-container">        
        <div class="article-header">
          <h4 class="topic">
            <a href="https://www.cfr.org{{topic_link}}" target="_blank">{{topic}}</a>
          </h4>
          <h3 class="headline">
            <a href="{{link}}" target="_blank">{{title}}</a>
          </h3>
          <p>{{date}}</p>
        </div>        
        <div class="article-btns">
          {{#if saved}}
            <button class="delete-article article-btn" data-id="{{id}}">Delete from Saved</button>
            <button class="comment-btn article-btn" data-id="{{id}}">Article Notes</button>
          {{else}}
            <button class="save-article article-btn" data-id="{{id}}">Save Article</button>
          {{/if}}
        </div>
      </div>
      <div class="notes-container" id="{{id}}-notes-container"></div>   
    </li>
  {{/each}}